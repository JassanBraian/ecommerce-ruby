<div id="<%= dom_id sale %>">
  <div class="card">
    <div class="card-header">
      Fecha de compra: <%= Time.now %>
    <div>
    <div class="card-body">
      <h5 class="card-title">Lista de productos selecionados:</h5>
      <% sale.sale_products.each do |sale_product| %>
        <%= render "sale_product", sale_product: sale_product %>
      <% end %>
      <p class="card-text text-center text-success">Total: <%= sale.total %></p>
    </div>
    <div class="card-footer">
      <%= Time.now %>
    </div>
  </div>
</div>