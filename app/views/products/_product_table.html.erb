<table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Stock</th>
        <th scope="col">Brand</th>
      </tr>
    </thead>
    <tbody>
      <% products.each_with_index do |product, index| %>
          <div id="<%= dom_id product %>">
            <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><%= product.title %></td>
                <td><%= product.stock %></td>
                <td><%= product.brand.title %></td>
                <td>
                    <p>
                        <%= link_to "Show this product", product %>
                    </p>
                </td>
              <td>
                  <%= button_to "Add to cart", { :controller => "sales", :action => "add_product_to_sale", :product_id => product.id }, {:method => :post} %>
              </td>
            </tr>
          </div> 
      <% end %>
    </tbody>
</table>

