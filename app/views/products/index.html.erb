<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Stock</th>
        <th scope="col">Brand</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
          <%= render "product_table", product: product %>
      <% end %>
  </tbody>
</table>
</div>

<%= link_to "New product", new_product_path %>
