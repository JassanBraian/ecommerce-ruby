<h1>Brands</h1>

<div id="brands">
  <% @brands.each do |brand| %>
    <div style="padding:1m 0 1em 0;border:solid 1px">
      <%= render brand %>
      <p>
        <%= link_to "Show this brand", brand %>
      </p>
    </div>
  <% end %>
</div>

